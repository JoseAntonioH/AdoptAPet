<form action="/pet/quiz" method="POST" >
    <div class="containerLogIn-create-pet" >
        <h1 class="h1-create-pet">Lets find your Pet Soulmate </h1>
        <div class="div-new-pet">
            
            <div class="div-new-pet-fields" >
                
                <div class="field-create-pet">
                    <label for="pets" class="form-label label-create-pet">Which pet would you like?</label>
                    <select id="pet" name="pet" class="form-select form-control" aria-label="Default select example" required>
                        <option value="">-</option>
                        <option value="dog">Dog</option>
                        <option value="cat">Cat</option>
                    </select>
                </div>
                <div class="field-create-pet">
                    <label for="size" class="form-label label-create-pet">What's the size of your home?</label>
                    <select id="size" name="size" class="form-select form-control" aria-label="Default select example" required>
                        <option  value="">-</option>
                        <option value="small">Small</option>
                        <option value="medium">Medium</option>
                        <option value="big">Big</option>
                    </select>
                </div>
                <div class="field-create-pet">
                    <label for="personality" class="form-label label-create-pet">What's your personality?</label>
                    <select id="personality" name="personality" class="form-select form-control" aria-label="Default select example" required>
                        <option  value="">-</option>
                        <option value="playful">Extrovert</option>
                        <option value="energetic">Energetic</option>
                        <option value="relaxed">Introvert</option>
                    </select>
                </div>
                <div class="field-create-pet">
                    <label for="sociability" class="form-label label-create-pet">Do you live with 3 or more people?</label>
                    <select id="sociability" name="sociability" class="form-select form-control" aria-label="Default select example" required>
                        <option value="">-</option>
                        <option value="sociable">3 persons or more</option>
                        <option value="no sociable">Less than 3 persons</option>
                    </select>
                </div>
                <div class="quiz-images">
                    <button type="submit" class="btnHome-signup" role="button" href="/pet/quiz-result">Submit</button>
                    <img class="searching" src="/images/searching.png"/>
                </div>
            </div>
        </div>
   </div>
</form>





