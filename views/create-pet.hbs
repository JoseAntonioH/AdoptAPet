<form action="/pet/new" method="POST" enctype="multipart/form-data">
    
    <div class="containerLogIn-create-pet" >
        <h1 class="h1-create-pet">Let's find a home </h1> 
        <div class="div-new-pet">
             <div>
                 <image class="image-create-pet" src="/images/adopt-create-pet-01.png" alt=""/>
            </div>
            <div class="div-new-pet-fields" >
            <div class="field-create-pet">
                <label class="form-label label-create-pet"> Pet's Name
                    <input type="text" name="petname"  placeholder="Michi" class="form-control input-new-pet" required>
                </label>
            </div>
            <div class="field-create-pet">
                <label for="pets" class="form-label label-create-pet">Select your pet</label>
                <select id="pet" name="pet" class="form-select form-control required" aria-label="Default select example"  required >
                    <option value ="">-</option>
                    <option value="dog">Dog</option>
                    <option value="cat">Cat</option>
                </select>
            </div>
            <div class="field-create-pet">
                <label class="form-label label-create-pet"> Date of Birth
                    <input type="date" name="dob" class="form-control" required>
                </label>
            </div>
            <div class="field-create-pet">
                <label for="size" class="form-label label-create-pet">What's your pet's size?</label>
                <select id="size" name="size" class="form-select form-control required" aria-label="Default select example" required>
                    <option value="">-</option>
                    <option value="small">Small</option>
                    <option value="medium">Medium</option>
                    <option value="big">Big</option>
                </select>
            </div>
            <div class="field-create-pet">
                <label for="personality" class="form-label label-create-pet">What's your pet's personality?</label>
                <select id="personality" name="personality" class="form-select form-control required" aria-label="Default select example" required>
                    <option value="">-</option>
                    <option value="playful">Playful</option>
                    <option value="energetic">Energetic</option>
                    <option value="relaxed">Relaxed</option>
                </select>
            </div>
            <div class="field-create-pet">
                <label for="sociability" class="form-label label-create-pet">Is your pet sociable?</label>
                <select id="sociability" name="sociability" class="form-select form-control required" aria-label="Default select example" required>
                    <option value="">-</option>
                    <option value="sociable">Yes, very sociable</option>
                    <option value="no sociable">Nope, he's better off alone</option>
                </select>  
            </div>
						<div class="input-group mb-3 field-create-pet">
			             <input type="file" name="image" class="form-control" id="inputGroupFile02" required>
				           
						</div>
            <button type="submit" class="btnHome-signup" role="button"">Submit</button>
           
        </div>
        </div>
        
   </div>
</form>